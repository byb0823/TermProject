CC = gcc                          # 1. 불필요 (커널이 자동 설정)
obj-m := module_exam.o            
KDIR := /lib/modules/$(shell uname-r)/build  # 2. 오타! uname-r → uname -r

default:                          # 3. all이 더 일반적
    $(MAKE) -C $(KDIR) SUBDIRS=$(PWD) modules  # 4. 구식! SUBDIRS → M

clean:
    rm-f *.ko                     # 5. 오타! rm-f → rm -f
    rm-f *.o                      # 6. 커널 시스템 clean 미사용
    rm-f *.mod.*
    rm-f .*.cmd